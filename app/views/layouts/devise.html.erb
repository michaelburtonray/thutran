<body class="admin <%= controller_name %> <%= action_name %>">

  <% flash.each do |key, value| %>
    <div class='flash' id='<%= key %>'>
      <%= value %>
    </div>
  <% end %>

  <header>

    <h1><%= link_to "Thu Tran", admin_root_path, { id: "mini-logo"} %></h1>

    <nav id="mini-menu">

      <% if user_signed_in? %>
        <span>Welcome <%= current_user.email %></span>
        <%= link_to "Edit Profile", edit_user_registration_path %>
      <% end %>

      <%= link_to "View Website", root_path, :target => "_blank" %>

      <% if user_signed_in? %>
        <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
      <% else %>
        <%= link_to 'Login', new_user_session_path %>
      <% end %>

    </nav>

  </header>


  <div id="content">
    <%= yield %>
  </div>

