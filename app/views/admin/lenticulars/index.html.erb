<h1>Listing lenticulars</h1>

<table width="100%">
  <thead>
    <tr>
      <th>Image</th>
      <th>Lense</th>
      <th>Anchor hyperlink reference</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lenticulars.each do |lenticular| %>
      <tr>
        <td><%= image_tag lenticular.image.url, :width => 100 %><br><%= lenticular.image_dimensions %></td>
        <td><%= image_tag lenticular.lense.url, :width => 100 %><br><%= lenticular.lense_dimensions %></td>
        <td><%= lenticular.anchor_hyperlink_reference %></td>
        <td><%= link_to 'Show', "/\#section_#{lenticular.id}", :target => "_blank" %></td>
        <td><%= link_to 'Edit', edit_admin_lenticular_path(lenticular), :class => "edit button" %></td>
        <td><%= link_to 'Destroy', [:admin, lenticular], method: :delete, data: { confirm: 'Are you sure?' }, :class => "delete button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lenticular', new_admin_lenticular_path, :class => "new button" %>
