<% if @background %>

  <style type="text/css">
    html { background-image: url('<%= @background.image.url %>') }
    /*body { background-image: url('<%= @background.lense.url %>') }*/
    #background { background-image: url('<%= @background.lense.url %>') }

  </style>

<% end %>

<div id="background-info" data-image-width="<%= @background.image_dimensions[0] %>" data-image-height="<%= @background.image_dimensions[1] %>" data-lense-width="<%= @background.lense_dimensions[0] %>" data-lense-height="<%= @background.lense_dimensions[1] %>"></div>

<% if @lenticulars.any? %>
  <% @lenticulars.each do |lenticular| %>

    <article class="lenticular" id="lenticular_<%= lenticular.id %>" style="<%= lenticular.position == 1 ? "margin-top: calc(50vh - #{lenticular.image_dimensions[1]/2}px)" : nil %>">
      <% if lenticular.anchor_hyperlink_reference.length > 0 %>
        <a href="<%= lenticular.anchor_hyperlink_reference %>" target="_blank" class="image SPACEBAR" style="background-image: url('<%= lenticular.image.url %>'); max-width: <%= lenticular.image_dimensions[0] %>px; height: <%= lenticular.image_dimensions[1] %>px" data-width="<%= lenticular.image_dimensions[0] %>" data-height="<%= lenticular.image_dimensions[1] %>">
          <!-- <div class="lense" style="background-image: url('<%= lenticular.lense.url %>')"  data-width="<%= lenticular.lense_dimensions[0] %>" data-height="<%= lenticular.lense_dimensions[1] %>"></div> -->
        </a>
      <% else %>
        <div class="image SPACEBAR" style="background-image: url('<%= lenticular.image.url %>'); max-width: <%= lenticular.image_dimensions[0] %>px; height: <%= lenticular.image_dimensions[1] %>px" data-width="<%= lenticular.image_dimensions[0] %>" data-height="<%= lenticular.image_dimensions[1] %>">
          <!-- <div class="lense" style="background-image: url('<%= lenticular.lense.url %>')"  data-width="<%= lenticular.lense_dimensions[0] %>" data-height="<%= lenticular.lense_dimensions[1] %>"></div> -->
        </div>
      <% end %>
    </article>


  <% end %>

<% else %>

  <p>no lenticulars to display</p>

<% end %>
